import java.io.*;

class FileDemo {
    public static void main(String[] args) throws Exception {

        FileWriter fw = new FileWriter("data.txt");
        fw.write("Java File Handling Example");
        fw.close();

        FileReader fr = new FileReader("data.txt");
        int ch;
        while ((ch = fr.read()) != -1) {
            System.out.print((char) ch);
        }
        fr.close();
    }
}
