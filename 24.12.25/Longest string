class LongestWord {
    public static void main(String[] args) {
        String str = "Java programming language is powerful";
        String[] words = str.split(" ");
        String longest = "";

        for (String w : words) {
            if (w.length() > longest.length())
                longest = w;
        }
        System.out.println("Longest Word: " + longest);
    }
}
